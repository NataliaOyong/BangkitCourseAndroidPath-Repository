<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MyPlanetApp" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.MyPlanetApp" parent="Base.Theme.MyPlanetApp" />

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item> <!-- Latar belakang toolbar -->
        <item name="titleTextColor">@android:color/white</item> <!-- Warna teks toolbar -->
        <item name="subtitleTextColor">@android:color/white</item> <!-- Warna teks subtitle (jika ada) -->
        <item name="android:elevation">4dp</item> <!-- Bayangan di bawah toolbar -->
    </style>

    <style name="Theme.MyPlanetApp.Splash" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ProfileImageStyle">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Circle</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
